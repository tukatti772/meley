<%#dairyコントローラpostingアクションのビューファイル%>


<p class="a1">投稿してみよう!</p>

<div class="postform">

<%= form_tag('/dairy', method: :post) do %>

<p>

<label>
<input type="text" name="title" id="title" placeholder="タイトル(最大100文字)">
</label>

<br>
<br>
<label>
<input type="text" name="field[]"  placeholder="タグ1(最大20文字)">
<input type="text" name="field[]"  placeholder="タグ2(最大20文字)">
<input type="text" name="field[]"  placeholder="タグ3(最大20文字)">
<input type="text" name="field[]"  placeholder="タグ4(最大20文字)">
<input type="text" name="field[]"  placeholder="タグ5(最大20文字)">
</label>

<br>
<br>
<br>
<br>

<textarea name="text" class="wysihtml5" placeholder="ここに投稿内容を入力してください。" cols="10" rows="10">
</textarea>

<%# bootstrap-wysiwigの記述 %>
<script type="text/javascript">

$(document).on('turbolinks:load', function(){
<%# 下の1行で、要素が存在しない場合のみツールバーを表示する%>
<%# もしこうしなければ、turbolinksにより無限に表示される%>
  if (!$('ul.wysihtml5-toolbar')[0]){
   $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5({ toolbar:{ "fa": true, 'font-styles': true,
      'color': true,
      'emphasis': {
        'small': true
      },
      'blockquote': true,
      'lists': true,
      'html': false,
      'link': true,
      'image': false,
      'smallmodals': false }});
    });
 } 
})

</script>

<br>
<br>
<br>

<p>
<input type="button" onclick="submit();" value="投稿する！" class="postbutton">
</p>
<% end %>
</div>


