<%#新規登録時の画面%>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <br>

  <div class="signup">
   <%= f.label :nickname, "ニックネーム" %><br />
    <%= f.text_field :nickname, autofocus: true, maxlength: "30", class: 'registerbox'%>
  </div>
  <br>

  <div class="signup">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, maxlength: "100", class: 'registerbox' %>
  </div>
  <br>

  <div class="signup">
   <%= f.label :comment, "自己紹介" %> (最大150文字)<br />
    <%= f.text_area :comment, maxlength: "150", class: 'registerbox2' %>
  </div>


  <div class="signup">
   <%= f.label :toeic, "TOEICスコア" %>
    <%= f.text_field :toeic, maxlength: "3" %>
  </div>

  <div class="signup">
   <%= f.label :toefl, "TOEFLスコア" %>
    <%= f.text_field :toefl, maxlength: "3" %>
  </div>

  <div class="signup">
   <%= f.label :ielts, "IELTSスコア" %>
    <%= f.select :ielts, [["なし","なし"],["1.5","1.5"],["2","2"],["2.5","2.5"],["3","3"],["3.5","3.5"],["4","4"],["4.5","4.5"],["5","5"],["5.5","5.5"],["6","6"],["6.5","6.5"],["7","7"],["7.5","7.5"],["8","8"],["8.5","8.5"],["9","9"]] %>
  </div>

  <div class="signup">
   <%= f.label :eiken, "英検" %>
    <%= f.select :eiken, [["なし","なし"],["5級","5級"],["4級","4級"],["3級","3級"],["準2級","準2級"],["2級","2級"],["準1級","準1級"],["1級","1級"]] %>
  </div>


  <div class="signup">
  <%= f.label :avatar, "プロフィール画像" %>
  </div>
  
  <div class="avatar">
  <br>
  <%# input="file"が何やっても中央に寄らないので、centerタグを使用 %>
  <center>
    <%= f.file_field :avatar, class: 'avatarbox' %>
  </center>
  </div>


  <div class="signup">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> 文字以上)
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>


  <div class="signup">
    <%= f.label :password_confirmation, "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <br>

  <div class="signup4">
    <%= f.submit "新規登録", class: 'signupbutton'%>
  </div>
<% end %>

