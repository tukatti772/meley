<% @allanswers3.each do |hey| %>

<div class="showbox">

<% if hey.label == "B" then %>
<div id='indextitle'><a href ="/business/<%= hey.business_id %>"><%= strip_tags hey.business_title %>（ビジネス）</a></div>
