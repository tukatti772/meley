<% if current_user.following?(sodane) %>

<%# アンフォローボタン %>
<%= form_for(current_user.active_relationships.find_by(followed_id: sodane.id),
   html: { method: :delete }, remote: true) do |f| %>
  <%= f.submit "フォロー中", class: "postbutton" %>
<% end %>

<% else %>

<%# フォローボタン %>
<%= form_for(current_user.active_relationships.build, remote: true) do |f| %>
  <div><%= hidden_field_tag :followed_id, sodane.id %></div>
  <%= f.submit "フォローする", class: "postbutton" %>
<% end %>

<% end %>
