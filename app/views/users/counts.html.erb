
<%# usersコントローラーのcountsアクション。ユーザーの統計・スコアを表示。%>

<div class="tab-menu">

 <% if user_signed_in? %>

   <div class="userbox">

     <%= image_tag @user.avatar.url(:medium), class: 'userimage'  %>  <span class="a5 boldtext"><%= @user.nickname %></span> 

       <% unless current_user.id == @user.id %>

          <div id="followbutton">
          <%= render 'users/followbutton', sodane: @user %>
          </div>

       <% end %> <%# unless current_user.id ... %>

   </div> <%# /.userbox%>

 <% else %>  <%# if user_signed_in? %>


   <div class="userbox">

     <%= image_tag @user.avatar.url(:medium), class: 'userimage'  %> <span class="a5 boldtext"><%= @user.nickname %></span> 


   </div> <%# /.userbox%>

 <% end %> <%# if user_signed_in? %>


<br>

     <div class="menubox">
      <%# Single button %>
      <div class="btn-group inline">
        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
         メニュー <span class="caret"></span>
        </button>
       <ul class="dropdown-menu">
          <%# htmlなので、@questionsIDを表示させる際にrubyの式展開は使えないっぽい %>
        <li><a href="/users/<%= @countsID %>">投稿一覧</a></li>
        <li><a href="/users/<%= @countsID %>/questions">コメントした投稿</a></li>
        <li><a href="/users/<%= @countsID %>/follows">フォロー</a></li>
        <li><a href="/users/<%= @countsID %>/followers">フォロワー</a></li>
        <li><a href="/users/<%= @countsID %>/bookmarks">ブックマークした投稿</a></li>
        <li><a href="/users/<%= @countsID %>/counts">統計・スコア</a></li>
       </ul>
      </div> <%# /.btn-group %>
     </div> <%# ./menubox %>


     <div class="panel panel-danger mainbox">
      <div class="panel-body">
       <%= @user.comment %>
      </div>
     </div>




<div class="countdisplay1">

<div class="countbox">
    <div class="box-title1">投稿</div>
    <p class="countfont"><%= @questiond %></p>
</div>

<div class="countbox">
    <div class="box-title1">コメント</div>
    <p class="countfont"><%= @answerd %></p>
</div>

