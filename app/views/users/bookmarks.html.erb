<br>
<div class="showbox3">
<%= @user.comment %>
</div>

<% unless current_user.id == @user.id %>

<div id="followbutton">
<%= render 'users/followbutton', sodane: @user %>
</div>

<% end %>

<% else %>
<%= image_tag @user.avatar.url(:thumb) %> <%= @user.nickname %> さんのページです。
<br>
<div class="showbox3">
<%= @user.comment %>
</div>
<% end %>

</div>


 <ul>
   <li class="list2">
   <%= link_to '投稿' , "/users/#{@bookmarksID}" %>
   </li>
   <li class="list2">
   <%= link_to 'コメント' , "/users/#{@bookmarksID}/questions" %>
   </li>
   <li class="list2">
   <%= link_to '統計/スコア' , "/users/#{@bookmarksID}/counts" %>
   </li>
    <li class="list2">
   <%= link_to 'フォロー' , "/users/#{@bookmarksID}/follows" %>
   </li>
    <li class="list2">
   <%= link_to 'フォロワー' , "/users/#{@bookmarksID}/followers" %>
   </li>
   <li class="list1">
   <%= link_to 'ブックマーク' , "/users/#{@bookmarksID}/bookmarks" %>
   </li>
 </ul>



<% @bookmarklist.each do |cat| %>

<div class='showbox'>


<div id='indextitle'><a href ="/dairy/<%= cat.id %>"><%= cat.title %></a></div>


<br>
<br>

<div class='ellipsis'><%= strip_tags cat.text %></div>
<br>
<br>


<%# 投稿に紐づいているタグを1つずつ表示する %>
<% cat.tags.each do |yeah| %>
<div class="tag"><%= link_to "#{yeah.tag}" , "/tags/#{yeah.id}", :style => "color:white;"%></div>
<% end %>

<br>
<span>
<% if cat.dairyanswers.count == nil then %>
<%# == と記述しないと、左辺と右辺が等しいという意味にならないよ！ %>
コメント数：<span> <%= "0" %> </span>
<% else %>
コメント数：<span> <%= cat.dairyanswers.count %> </span>
<% end %>

　　投稿日：<%= cat.created_at.strftime('%Y/%m/%d %H:%M') %>
</span>

</div>

<% end %>


<div class="a4">
<%= paginate(@bookmarklist) %>
</div>

</div>
